{
    "login": {
        "endpoint": ".../api/login/",
        "método": "POST",
        "params": {
            "login": "string",
            "senha": "string"
        }
    },

    "create-sala": {
        "endpoint": ".../api/salas/create/",
        "método": "POST",    
        "autenticação": "Bearer ${token}",
        "params": {
            "nome": "string",
            "numero": "int"
        }
    },

    "read-sala": {
        "endpoint": ".../api/salas/",
        "método": "GET",
        "autenticação": "Bearer ${token}",
        "params": {
            "id": "int"
        }
    },

    "update-sala": {
        "endpoint": ".../api/salas/update/",
        "método": "PUT",
        "autenticação": "Bearer ${token}",
        "params": {
            "id": "int",
            "nome": "string",
            "numero": "int",
            "arduino": "string"
        }
    },

    "delete-sala" : {
        "endpoint": ".../api/salas/delete-sala",
        "método": "DELETE",
        "autenticação": "Bearer ${token}",
        "params": {
            "id" : "int"
        }
    }
}
